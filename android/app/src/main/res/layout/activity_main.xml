<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.esampaio.strangerthingsboard.activities.MainActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />


    <LinearLayout
        android:id="@+id/layoutLetters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutButton"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="letterClicked"
                app:letter="a"
                app:led_color="blue"
                />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="letterClicked"
                app:led_color="red"
                app:letter="b" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="letterClicked"
                app:led_color="green"
                app:letter="c" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="letterClicked"
                app:led_color="red"
                app:letter="d" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="blue"
                android:onClick="letterClicked"
                app:letter="e" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="green"
                android:onClick="letterClicked"
                app:letter="f" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="letterClicked"
                app:led_color="blue"
                app:letter="g" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="red"
                android:onClick="letterClicked"
                app:letter="h" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:led_color="red"
                android:layout_marginRight="25dp"
                android:onClick="letterClicked"
                app:letter="i" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="blue"
                android:onClick="letterClicked"
                app:letter="j" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="green"
                android:onClick="letterClicked"
                app:letter="k" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="blue"
                android:onClick="letterClicked"
                app:letter="l" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="green"
                android:onClick="letterClicked"
                app:letter="m" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="red"
                android:onClick="letterClicked"
                app:letter="n" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="blue"
                android:onClick="letterClicked"
                app:letter="o" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="red"
                android:onClick="letterClicked"
                app:letter="p" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:led_color="green"
                android:onClick="letterClicked"
                android:layout_marginLeft="25dp"
                app:letter="q" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="blue"
                android:onClick="letterClicked"
                app:letter="r" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="red"
                android:onClick="letterClicked"
                app:letter="s" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="green"
                android:onClick="letterClicked"
                app:letter="t" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="red"
                android:onClick="letterClicked"
                app:letter="u" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:led_color="blue"
                android:onClick="letterClicked"
                app:letter="v" />

            <com.apps.esampaio.strangerthingsboard.activities.view.custom.WallLetter
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
